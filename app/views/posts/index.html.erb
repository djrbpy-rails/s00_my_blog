<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post, class: "btn btn-secondary"%>
    </p>
  <% end %>
</div>
<br>
<%= link_to "New post", new_post_path, class: "btn btn-success"%>
